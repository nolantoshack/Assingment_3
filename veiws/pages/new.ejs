<%- include('../partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-8">
        <h2 class="mb-4">Submit a New Recipe</h2>
        
        <form action="/recipes" method="POST">
            <div class="mb-3">
                <label class="form-label">Recipe Title</label>
                <input type="text" class="form-control" name="recipe[title]" placeholder="e.g., Spicy Lasagna" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Image URL</label>
                <input type="text" class="form-control" name="recipe[image]" placeholder="https://...">
            </div>

            <div class="mb-3">
                <label class="form-label">Description</label>
                <input type="text" class="form-control" name="recipe[description]" placeholder="A brief summary of the dish" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Ingredients</label>
                <textarea class="form-control" name="recipe[ingredients]" rows="3" placeholder="List ingredients here..." required></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Cooking Instructions</label>
                <textarea class="form-control" name="recipe[instructions]" rows="5" placeholder="Step 1..." required></textarea>
            </div>

            <button type="submit" class="btn btn-success">Submit Recipe</button>
            <a href="/recipes" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

<%- include('../partials/footer') %>