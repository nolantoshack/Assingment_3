<%- include('../partials/header') %>

<div class="row">
    <div class="col-md-4">
        <img src="<%= recipe.image %>" class="img-fluid rounded shadow" alt="<%= recipe.title %>" onerror="this.onerror=null;this.src='https://via.placeholder.com/400?text=No+Image';">
        
        <div class="mt-4">
            <!-- EDIT BUTTON -->
            <a href="/recipes/<%= recipe._id %>/edit" class="btn btn-warning w-100 mb-2">Edit Recipe</a>
            
            <!-- DELETE FORM WITH CONFIRMATION -->
            <form action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this recipe? This cannot be undone.');">
                <button class="btn btn-danger w-100">Delete Recipe</button>
            </form>
        </div>
    </div>

    <div class="col-md-8">
        <h1><%= recipe.title %></h1>
        <p class="text-muted"><%= recipe.created.toDateString() %></p>
        <hr>
        
        <p class="lead"><%= recipe.description %></p>

        <div class="card mb-3">
            <div class="card-header bg-light">Ingredients</div>
            <div class="card-body">
                <p style="white-space: pre-line;"><%= recipe.ingredients %></p>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-light">Instructions</div>
            <div class="card-body">
                <p style="white-space: pre-line;"><%= recipe.instructions %></p>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>